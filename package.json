{
  "name": "dledle",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "jest src",
    "build": "rm -rf dist && ./build.mjs",
    "lint": "prettier --check \"{src,static}/**/*.{ts,css,html}\"",
    "lint:fix": "prettier --write \"{src,static}/**/*.{ts,css,html}\"",
    "serve": "./build.mjs --serve",
    "serves": "./build.mjs --serve --certfile ./localhost.pem --keyfile ./localhost-key.pem",
    "release": "cp ./docs/CNAME . && rm -rf docs && npm run build && cp -R ./dist ./docs && cp ./CNAME ./docs/CNAME"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@chialab/esbuild-plugin-html": "^0.17.3",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^29.5.11",
    "esbuild": "^0.19.10",
    "jest": "^29.7.0",
    "mockdate": "^3.0.5",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/seedrandom": "^3.0.8",
    "graphemer": "^1.4.0",
    "seedrandom": "^3.0.5"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 100,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrderSeparation": true,
    "importOrder": [
      "<THIRD_PARTY_MODULES>",
      "^[./]"
    ],
    "importOrderSortSpecifiers": true
  },
  "esbuild": {
    "minify": true,
    "bundle": true,
    "loader": {
      ".png": "file",
      ".css": "text",
      ".html": "text"
    },
    "outdir": "dist",
    "entryPoints": [
      "src/app.ts",
      "static/index.html"
    ]
  }
}
